#Definiciones.

OPTIMIZATION=-O3
#DEBUG=-g
DRIVE_PATH=C
MINGW32_INCLUDE=$(DRIVE_PATH):/mingw/include
MINGW32_LIB=$(DRIVE_PATH):/mingw/lib
SDL2_LIB=$(DRIVE_PATH):/SDLDev/lib
DIR_SDL2=$(DRIVE_PATH):/SDLDev/include
DIR_SDL2_B=$(DRIVE_PATH):/SDLDev/include/SDL2
DIR_HOME=$(DRIVE_PATH):/Devel/
DIR_LIBDAN2=$(DIR_HOME)libdansdl2-master
DIR_HERRAMIENTAS_PROYECTO=$(DIR_HOME)herramientas_proyecto-master/
DIR_O_HERRAMIENTAS_PROYECTO=$(DIR_HOME)herramientas_proyecto-master/objects/

CFLAGS= -DWINCOMPIL=1 $(DEBUG) $(OPTIMIZATION) -c -Wno-deprecated -Wall -ansi -pedantic -std=c++11 -fno-rtti
CFLAGS_TARGET_FINAL=-DWINCOMPIL=1 $(DEBUG) $(OPTIMIZATION) -Wno-deprecated -Wall -ansi -pedantic -std=c++11
CC=g++
EXECUTABLE=a.exe
DO_CLEAN=rmdir objects /s /q; del $(EXECUTABLE);
DO_DIR_OBJECTS=if not exist objects mkdir objects & copy nul objects/dummy > nul

LINKER=-L$(MINGW32_LIB) -L$(SDL2_LIB) -L$(DIR_LIBDAN2) -lDanSDL2 -lmingw32 -lSDL2main -lSDL2 -lSDL2_mixer -lSDL2_image -lSDL2_ttf -static-libgcc -static-libstdc++
INCLUDES=-I$(DIR_SDL2) -I$(DIR_SDL2_B) -I$(DIR_LIBDAN2) -I$(DIR_HERRAMIENTAS_PROYECTO) -I$(MINGW32_INCLUDE) 

include make/core
